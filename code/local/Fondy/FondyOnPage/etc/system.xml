<?xml version="1.0"?>
    <config>
       <sections>
            <payment>
                <groups>
                    <FondyOnPage translate="label" module="paygate">
                        <label>FondyOnPage</label>
                        <sort_order>670</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                        <fields>
                            <active translate="label">
                                <label>Enabled</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>1</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </active>
                            <title translate="label">
                                <label>Name</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </title>
                            <order_status translate="label">
                                <label>New Order Status</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_order_status</source_model>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </order_status>
                            <after_pay_status translate="label">
                                <label>After payment status</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_order_status</source_model>
                                <sort_order>3</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </after_pay_status>
    <!-- Special configuration -->
                            <merchant translate="label">
                                <label>Merchant ID</label>
                                <frontend_type>text</frontend_type>
                                <comment>Merchant ID</comment>
                                <sort_order>4</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </merchant>

                            <secret_key translate="label">
                                <label>Secret key</label>
                                <frontend_type>text</frontend_type>
                                <comment>Secret key of merchant</comment>
                                <sort_order>5</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </secret_key>

                            <currency translate="label">
                                <label>Currency</label>
                                <frontend_type>text</frontend_type>
                                <comment>(UAH/RUB/EUR/USD)</comment>
                                <sort_order>6</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </currency>

                            <language translate="label">
                                <label>Language Fondy</label>
                                <frontend_type>text</frontend_type>
                                <comment>( UA, RU, EN, LV )</comment>
                                <sort_order>9</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </language>
                            <styles translate="label">
                                <label>Styles</label>
                                <frontend_type>textarea</frontend_type>
                                <comment>Sample checkoutStyles http://jsfiddle.net/8h65h91t/</comment>
                                <sort_order>10</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </styles>

                        </fields>
                    </FondyOnPage>
                </groups>
            </payment>
        </sections>
    </config>