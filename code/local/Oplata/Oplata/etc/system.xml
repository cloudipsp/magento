<?xml version="1.0"?>
    <config>
       <sections>
            <payment>
                <groups>
                    <Oplata translate="label" module="paygate">
                        <label>Oplata( UA/RU )</label>
                        <sort_order>670</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                        <fields>
                            <active translate="label">
                                <label>Статус модуля(включен)</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_yesno</source_model>
                                <sort_order>1</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </active>
                            <title translate="label">
                                <label>Название</label>
                                <frontend_type>text</frontend_type>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </title>
                            <order_status translate="label">
                                <label>Статус нового заказа</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_order_status</source_model>
                                <sort_order>2</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </order_status>
                            <after_pay_status translate="label">
                                <label>Статус после оплаты</label>
                                <frontend_type>select</frontend_type>
                                <source_model>adminhtml/system_config_source_order_status</source_model>
                                <sort_order>3</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </after_pay_status>
    <!-- Special configuration -->
                            <merchant translate="label">
                                <label>Мерчант</label>
                                <frontend_type>text</frontend_type>
                                <comment>Идентификатор мерчанта</comment>
                                <sort_order>4</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </merchant>

                            <secret_key translate="label">
                                <label>Ключ мерчанта</label>
                                <frontend_type>text</frontend_type>
                                <comment>Секретный ключ мерчанта</comment>
                                <sort_order>5</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </secret_key>

                            <currency translate="label">
                                <label>Валюта мерчанта</label>
                                <frontend_type>text</frontend_type>
                                <comment>(UAH/RUB/EUR/USD)</comment>
                                <sort_order>6</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </currency>

                            <back_ref translate="label">
                                <label>Ссылка для возврата клиента</label>
                                <frontend_type>text</frontend_type>
                                <comment>( Страница, на которую вернется клиент после оплаты. )</comment>
                                <sort_order>7</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </back_ref>

                            <language translate="label">
                                <label>Язык страницы Oplata</label>
                                <frontend_type>text</frontend_type>
                                <comment>Доступны ( UA, RU, EN, LV )</comment>
                                <sort_order>9</sort_order>
                                <show_in_default>1</show_in_default>
                                <show_in_website>1</show_in_website>
                                <show_in_store>0</show_in_store>
                            </language>
                        </fields>
                    </Oplata>
                </groups>
            </payment>
        </sections>
    </config>